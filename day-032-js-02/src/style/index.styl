*
  box-sizing: border-box

html, body
  margin 0
  padding 0


body
  background-color #333

input
  border none
  outline none
  border-bottom: solid 2px white
  padding 10px
  margin-right 2%
  width 25%
  font-size: 2rem
  &.invalid
    border-color: #BD2D30
    color #BD2D30
  &:last-child
    margin-right 0

.container
  display flex
  justify-content: center
  align-items: center
  height 50vh
