$radius = 40px
$border-width = 5px
$ball-red = red
$ball-blue = blue
* 
  box-sizing:  border-box

html, body
  margin: 0
  padding: 0
  width 100%
  height 100%
  font-family: MSYahei, sans-serif;

.container
  height 100%
  background-color #333
  display flex
  text-align center
  flex-direction: column
  justify-content: space-around
  align-items: center

.balls
  display flex
  justify-content: center
  align-items: center
  color #fff
  .ball
    margin 20px
    width $radius * 2
    height $radius * 2
    border-radius: 50%
    font-size $radius
    text-align center
    line-height $radius * 2
    &.animate
      animation rotate 1.2s ease-in-out,
        fade-text 1.2s;
    // box-shadow 0 0 
    &.ball-red
      // border solid $border-width red
      background: radial-gradient(farthest-side at 44% 28%, lighten($ball-red, 32%), $ball-red 30%, darken($ball-red, 25%) 150%);
    &.ball-blue
      background: radial-gradient(farthest-side at 44% 28%, lighten($ball-blue, 32%), $ball-blue 30%, darken($ball-blue, 25%) 150%);
      // border solid $border-width blue
.roll
  display inline-block
  width 100px
  height 100px
  color white
  text-align center
  display flex
  justify-content center
  font-size 32px
  font-weight: bold
  align-items center
  &:hover
    border solid 5px white
@keyframes rotate {
  from {
    transform rotateZ(0)
  }
  to {

    transform rotateZ(1800deg)
  }
}
@keyframes fade-text 
  from
    color rgba(255,255,255, 0)
  60%
    color rgba(255,255,255, 0)
  80%
    color rgba(255,255,255, 0.8)
  to
    color rgba(255,255,255, 1.0)