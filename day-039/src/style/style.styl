$header-height = 64px
$content-width = 1000px
$content-height = 600px
$button-color = white

* 
  box-sizing: border-box

html, body
  margin: 0
  padding: 0
input
  outline none
  border none
a
  text-decoration: none
// body
//   font 16px 
.container
  width $content-width
  margin auto

.d-flex
  display flex

.header
  height $header-height
  .container
    height 100%
    display flex
    justify-content: space-between
    align-items: center
    
  .logo
    margin-left 50px
    .name
      line-height $header-height
      font-size 2rem
      margin-right 20px
      font-family: fantasy
      color red
    .slogon
      display flex
      flex-direction: column
      align-items: center
      justify-content: space-around


  .nav
    height 100%
    display flex
    // justi
    .nav-link
      font-size: 0.8rem
      font-weight: lighter
      padding 0 1rem
      text-align center
      line-height $header-height

.main
  height $content-height
  background-color #000
  .container
    position relative
    height 100%
  .ad
    background-image url('../assets/promPic_1.jpg')
    height 100%
  .login-box
    position absolute
    height 500px
    width 300px
    background-color rgba(255, 255, 255, 0.75)
    top: 50%
    right 20px
    transform translateY(-50%)
    border-radius 10px
    box-shadow 0 0 10px rgba(30,30,30, 0.3)

    .login-methods

      .login-method
        background linear-gradient(white,  #87ceeb4d)
        width 50%
        height 40px
        text-align center
        line-height 40px
        box-shadow: inset -1px -1px 2px 0  rgba(41, 78, 86, 0.3)
        // border- none
        &:nth-child(1)
          border-top-left-radius: 10px
        &:nth-child(2)
          box-shadow: inset 1px -1px 2px 0  rgba(41, 78, 86, 0.3)
          border-top-right-radius: 10px
        &.active
          background white
          box-shadow: none

    .login-content
      display: none
      text-align center
      flex-direction: column
      justify-content: space-around
      align-items: center
    .account-content
      form 

        width 80%
        .input-wrap
          position relative
          width 100%
          span:first-child
            position absolute
            top 50%
            transform: translateY(-50%)
            color gray
            left 6px
        .placeholder
          position absolute
          right 10px
          top 50%
          transform: translateY(-50%)




      .form-group
        display flex
        justify-content space-between
        .action
          width 40%
          height 40px
          font-weight: bold
          border-radius: 5px
          background-color #2277CF
          color #fff
          font-size 20px
          line-height 40px
          text-align center
          box-shadow 0 0 5px rgba(30,30,30,0.4)
          &:nth-child(2)
            color #000
            background-color #fff

      input.letter
        outline none
        width 100%
        padding: 0.2rem 6rem 0.2rem 2rem
        border-radius: 5px
        box-shadow: 0 0 5px rgba(30,30,30, 0.2)
        margin 1rem 0
        font-size 1.5rem
      input[name="password"]
        padding: 0.2rem 2rem 0.2rem 2rem


      &.active
        display flex
  .buttons
    position absolute
    right 50px
    bottom 20px
    .btn
      cursor pointer
      width 20px
      height 20px
      border-radius: 50%  
      border solid 2px gray
      background-color gray
      color #fff
      position relative
      margin 0 5px
      &.btn-prev::before
        content ""
        position absolute
        top 3px
        left 4px
        width 8px
        height 8px
        border-top solid 2px $button-color
        border-left solid 2px $button-color
        transform rotateZ(-45deg)
      &.btn-next::before
        content ""
        position absolute
        width 8px
        top 3px
        right 4px
        height 8px
        border-top solid 2px $button-color
        border-right solid 2px $button-color
        transform rotateZ(45deg)

.space-between
  justify-content: space-between

.footer
  .container
    padding: 1rem 0
