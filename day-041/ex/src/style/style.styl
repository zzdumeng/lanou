html, body
  margin 0
  padding 0
  width 100% 
  height  100%

.container
  height 100%
  background-color #333
  display flex
  
  .carousel
    margin auto
    position relative
    width 220px
    height 220px
    .nav
      position absolute
      top 0
      width 25%
      height 100%
      &.prev
        left 0
      &.next
        right 0