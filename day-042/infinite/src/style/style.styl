html, body
  margin 0
  padding 0
  width 100%
  height 100%

.container
  .carousel
    width 400px
    height 200px
    border solid 1px
    overflow hidden
    position relative
    .item
      width 180px
      height 100%
      background-size: cover
      background-position center 
      position absolute
      top 0
      left 0
